{
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    },
    {
      "id": "@secretlint/secretlint-rule-pattern",
      "options": {
        "patterns": [
          {
            "name": "AWS Secret Access Key",
            "pattern": "/(aws_secret_access_key|AKIA[0-9A-Z]{16})[\\s]*[=:][\\s]*[A-Za-z0-9/+]{40}/"
          },
          {
            "name": "GitHub Token",
            "pattern": "/(ghp_|gho_|ghu_|ghs_|ghr_)[A-Za-z0-9_]{36,255}/"
          },
          {
            "name": "Slack Bot Token",
            "pattern": "/(xoxb-|xoxp-)[0-9]{10,13}-[0-9]{10,13}-[A-Za-z0-9_]{24,32}/"
          },
          {
            "name": "npm Token",
            "pattern": "/(npm_[A-Za-z0-9]{36}|//registry\\.npmjs\\.org/:_authToken)/"
          },
          {
            "name": "Google Service Account Key",
            "pattern": "/\"private_key\"\\s*:\\s*\"-----BEGIN PRIVATE KEY-----/"
          },
          {
            "name": "Private Key PEM",
            "pattern": "/-----BEGIN (RSA|DSA|EC|OPENSSH|PGP) PRIVATE KEY-----/"
          },
          {
            "name": "OpenRouter API Key",
            "pattern": "/sk-or-v1-[a-zA-Z0-9]{64}/"
          },
          {
            "name": "OpenAI API Key",
            "pattern": "/sk-[a-zA-Z0-9]{20,}/"
          },
          {
            "name": "Anthropic API Key",
            "pattern": "/sk-ant-[a-zA-Z0-9]{32,}|claude-key-[a-zA-Z0-9]{32,}/"
          },
          {
            "name": "Stripe API Key",
            "pattern": "/(sk_live_|sk_test_|rk_live_|rk_test_)[a-zA-Z0-9]{24,}/"
          },
          {
            "name": "Daytona Token",
            "pattern": "/dt_[a-zA-Z0-9]{20,}/"
          },
          {
            "name": "Google Cloud API Key",
            "pattern": "/AIza[0-9A-Za-z\\-_]{35}/"
          },
          {
            "name": "Firebase API Key",
            "pattern": "/AAAA[A-Za-z0-9_-]{7}:[A-Za-z0-9_-]{140}/"
          }
        ]
      }
    }
  ]
}

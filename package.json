{
  "name": "@presto-ai/google-workspace-mcp",
  "version": "1.0.0",
  "description": "NPM-distributable Google Workspace MCP server for Claude Desktop, Claude Code CLI, and Chatwise",
  "main": "dist/index.js",
  "bin": "./bin/cli.js",
  "scripts": {
    "test": "node --max-old-space-size=4096 node_modules/jest/bin/jest.js --runInBand --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "node --max-old-space-size=4096 node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --max-old-space-size=4096 node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2",
    "start": "ts-node src/index.ts",
    "clean": "rm -rf dist node_modules",
    "build": "node esbuild.config.js && npm run build:bin",
    "build:bin": "chmod +x bin/cli.js",
    "build:auth-utils": "node esbuild.auth-utils.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "google-workspace",
    "gmail",
    "calendar",
    "drive",
    "docs",
    "sheets",
    "chat",
    "claude"
  ],
  "author": "Presto AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrenaldi79/google-workspace-mcp.git"
  },
  "type": "commonjs",
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dompurify": "^3.0.6",
    "gaxios": "^6.1.1",
    "google-auth-library": "^9.0.0",
    "googleapis": "^140.0.0",
    "jsdom": "^23.0.0",
    "keytar": "^7.9.0",
    "marked": "^12.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "esbuild": "^0.27.1",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}

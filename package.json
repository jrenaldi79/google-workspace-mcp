{
  "name": "@presto-ai/google-workspace-mcp",
  "version": "1.0.5",
  "description": "NPM-distributable Google Workspace MCP server for Claude Desktop, Claude Code CLI, and Chatwise",
  "main": "dist/index.js",
  "bin": "./bin/cli.js",
  "scripts": {
    "test": "node --max-old-space-size=4096 node_modules/jest/bin/jest.js --runInBand --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "node --max-old-space-size=4096 node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --max-old-space-size=4096 node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"bin/**/*.js\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"bin/**/*.js\" \"*.json\" \"*.md\"",
    "start": "ts-node src/index.ts",
    "clean": "rm -rf dist node_modules",
    "build": "node esbuild.config.js && npm run build:bin",
    "build:bin": "chmod +x bin/cli.js",
    "build:auth-utils": "node esbuild.auth-utils.js",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "google-workspace",
    "gmail",
    "calendar",
    "drive",
    "docs",
    "sheets",
    "chat",
    "claude"
  ],
  "author": "Presto AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrenaldi79/google-workspace-mcp.git"
  },
  "type": "commonjs",
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dompurify": "^3.0.6",
    "gaxios": "^6.1.1",
    "google-auth-library": "^9.0.0",
    "googleapis": "^140.0.0",
    "jsdom": "^23.0.0",
    "keytar": "^7.9.0",
    "marked": "^12.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@secretlint/quick-start": "^11.2.5",
    "@secretlint/secretlint-rule-pattern": "^11.2.5",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "secretlint": "^11.2.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*": [
      "secretlint"
    ]
  }
}
